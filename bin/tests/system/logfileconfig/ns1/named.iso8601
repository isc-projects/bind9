options {
	query-source address 10.53.0.1;
	notify-source 10.53.0.1;
	transfer-source 10.53.0.1;
	port 5300;
	pid-file "named.pid";
	listen-on port 5300 {
		10.53.0.1;
	};
	listen-on-v6 { none; };
	recursion no;
	notify yes;
};

logging {
	channel default_log {
		file "named_iso8601";
		print-time iso8601;
		severity debug 9;
	};
	category default { default_log; default_debug; };
};

controls {
    inet 127.0.0.1 port 9593
	 allow { 127.0.0.1/32; ::1/128; }
	 keys { "rndc-key"; };
};

key "rndc-key" {
	algorithm hmac-sha256;
	secret "Am9vCg==";
};

zone "." {
	type master;
	file "root.db";
};
