// NS3

options {
	query-source address 10.53.0.3;
	notify-source 10.53.0.3;
	transfer-source 10.53.0.3;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.3; };
	listen-on-v6 { none; };
	recursion yes;
	notify no;
	dnssec-enable yes;
	dnssec-validation yes;
};

zone "." {
	type hint;
	file "root.hints";
};

zone "." {
	type redirect;
	file "redirect.db";
};

include "../ns1/trusted.conf";
