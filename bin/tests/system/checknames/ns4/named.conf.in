options {
	query-source address 10.53.0.4;
	notify-source 10.53.0.4;
	transfer-source 10.53.0.4;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.4; };
	listen-on-v6 { none; };
	recursion yes;
	check-names master ignore;
	notify yes;
};

zone "." {
	type hint;
	file "root.hints";
};

zone "master-ignore.update" {
	type master;
	file "master-ignore.update.db";
	allow-update { any; };
};
