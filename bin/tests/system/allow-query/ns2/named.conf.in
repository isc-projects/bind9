options {
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.2; };
	listen-on-v6 { none; };
	recursion no;
};

key one {
	algorithm hmac-md5;
	secret "1234abcd8765";
};

key two {
	algorithm hmac-md5;
	secret "1234efgh8765";
};

acl accept1 { 10.53.0.1; };

view block-ip {
	match-clients { 10.53.0.1; };

	allow-query {! accept1; };

	zone "normal.example" {
		type master;
		file "generic.db";
	};
};

view allow-key {
	match-clients { 10.53.0.2; };

	allow-query { key one; };

	zone "normal.example" {
		type master;
		file "generic.db";
	};
};

view block-key {
	match-clients { 10.53.0.3; };

	allow-query { key one; };

	zone "normal.example" {
		type master;
		file "generic.db";
	};
};

view reject-key {
	match-clients { 10.53.0.4; };

	allow-query {! key one; };

	zone "normal.example" {
		type master;
		file "generic.db";
	};
};
