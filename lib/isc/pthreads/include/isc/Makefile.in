srcdir =	@srcdir@
VPATH =		@srcdir@
top_srcdir =	@top_srcdir@

VERSION=@BIND9_VERSION@

HEADERS =	condition.h mutex.h once.h thread.h

SUBDIRS =
TARGETS =

@BIND9_MAKE_RULES@

installdirs:
	$(SHELL) ${top_srcdir}/mkinstalldirs ${DESTDIR}${includedir}/isc

install:: installdirs
	for i in ${HEADERS}; do \
		${INSTALL_DATA} $(srcdir)/$$i ${DESTDIR}${includedir}/isc ; \
	done
